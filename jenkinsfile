pipeline {
    agent any 
    stages {
	    stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Example Build') {
            steps {
                echo 'Building'
            }
        }
        stage('Example Test') {
            steps {
                echo 'Testing'
            }
        }
		stage('listing') {
            steps {
                bat 'dir' 
            }
        }
		stage('execute shell') {
            steps {
			    dir("../" + JOB_NAME + "@script") {
					script{
					    def statuscode = sh script:"hello.sh", returnStatus:true
						def data = "hello"
						println data
						println statuscode
						
					}
				}
            }
        }
    }
}